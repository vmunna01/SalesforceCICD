<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Mobile_No_should_be_10_digits</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT(ISBLANK(Mobile_No__c)), LEN(Mobile_No__c)&lt;10,  NOT(ISNUMBER(Mobile_No__c)) )</errorConditionFormula>
    <errorDisplayField>Mobile_No__c</errorDisplayField>
    <errorMessage>Mobile No should be a number and should have 10 digits</errorMessage>
</ValidationRule>
